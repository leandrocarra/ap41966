{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@services/*": [
                "app/services/*"
            ],
            "@components/*": [
                "app/components/*"
            ],
            "@shared/*": [
                "app/components/shared/*"
            ],
            "@environments/*": [
                "environments/*"
            ]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "strict": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "angularCompilerOptions": {
        "enableIvy": true,
        "strictTemplates": false
    }
}
